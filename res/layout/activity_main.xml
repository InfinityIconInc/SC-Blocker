<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:background="@drawable/graybackground"
        
   	
     >
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/tbCallBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="CallBlockingToggleClick"
            android:textOff="@string/strstrCallBlockingOFF"
            android:textOn="@string/strstrCallBlockingON"
             />

        <ToggleButton
            android:id="@+id/tbSMSBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="SMSBlockingToggleClick"
            android:textOff="@string/strstrSMSBlockingOFF"
            android:textOn="@string/strstrSMSBlockingON" 
            />
        
    </LinearLayout>
    

    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="0.01"
        android:orientation="horizontal" >
         <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="80dp"
       
        android:textAppearance="?android:attr/textAppearanceMedium" />
         

    <Button
        android:id="@+id/btnarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrownext" />

   

     </LinearLayout>
    
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="0.001"
        android:orientation="horizontal" >

    <Button
        android:id="@+id/taketour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pluss" />
    
     </LinearLayout>

</LinearLayout>